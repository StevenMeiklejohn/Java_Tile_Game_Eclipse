package com.codeclan.gfx;

import java.awt.image.BufferedImage;

public class AnimationOnce {
	
	private int speed;
	private int index;
	private int timer;


	private long totalLoopTime;


	private BufferedImage[] frames;
	long lastTime;
	long loopTime1;
	long loopTime2;
	int currentIndex;

	
	
	public AnimationOnce(int speed, BufferedImage[] frames){
		this.frames = frames;
		this.speed = speed;
		index = 0;
		timer = 0;
		lastTime = System.currentTimeMillis();
		totalLoopTime = System.currentTimeMillis();
		currentIndex = 0;
	}
	
	
	public void update(){
		timer += System.currentTimeMillis() - lastTime;
		lastTime = System.currentTimeMillis();
		loopTime1 = System.currentTimeMillis();
				
		if(timer > speed){
			index++;
			this.currentIndex += 1;
			timer = 0;
			if(index >= frames.length){
				index=0;

			}
		
		}
	}
	
	public int getCurrentIndex(){
		return currentIndex;
	}
	
	
	
	public BufferedImage getCurrentFrame(){
		return frames[index];
	}
	

	
//	public long getTotalLoopTime(){
//		System.out.println("Update has triggered and total loop time is" + totalLoopTime);
//		return totalLoopTime;
//	}

}
